from PIL import Image
import os

# Set the input and output folder paths
source_folder = r"Part 1\Unprocessed\cropped_focused_faces\cropped_focused_faces"
destination_folder = r"Part 1\Unprocessed\greyscale_focused_faces"

# Create the destination folder if it doesn't exist
if not os.path.exists(destination_folder):
    os.makedirs(destination_folder)

# Get a list of all files in the source folder
files = os.listdir(source_folder)

# Loop through the files in the source folder
for file in files:
    # Check if the file is an image (you can add more image extensions if needed)
    if file.lower().endswith(('.png', '.jpg', '.jpeg', '.gif', '.bmp')):
        # Open the image
        with Image.open(os.path.join(source_folder, file)) as img:
            # Convert the image to grayscale
            grayscale_img = img.convert('L')

            # Save the grayscale image to the destination folder
            grayscale_img.save(os.path.join(destination_folder, file))

print("Images converted to grayscale and saved to the destination folder.")